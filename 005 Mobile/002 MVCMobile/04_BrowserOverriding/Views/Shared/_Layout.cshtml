<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        table
        {
            border-collapse: collapse;
            margin-left: 50px;
        }

        th
        {
            text-align: left;
            border-bottom: 1px solid black;
            padding-right: 20px;
            font-weight: normal;
        }

        td
        {
            padding-left: 10px;
            border-bottom: 1px solid black;
        }

        h2
        {
            color: #ff0085;
        }
    </style>
</head>
<body>
    @RenderBody()
</body>
</html>
